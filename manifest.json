{
    "manifest_version": 2,
    "name": "Ebay Tools",
    "short_name": "Ebay Tools",
    "description": "Several tools for Ebay.",
    "version": "1.3.0",
    "permissions": ["tabs", "storage"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons":
    {
        "128": "images/default-128.png",
        "48": "images/default-48.png",
        "24": "images/default-24.png"
    },
    "background":
    {
        "scripts": ["background.js"]
    },
    "browser_action":
    {
        "default_popup": "popup.html"
    },
    "content_scripts": [
    {
        "matches": ["*://*.ebay.com/sch/*", "*://*.ebay.es/sch/*", "*://*.ebay.in/sch/*", "*://*.ebay.co.jp/sch/*", "*://*.ebay.fr/sch/*", "*://*.ebay.de/sch/*", "*://*.ebay.it/sch/*", "*://*.ebay.nl/sch/*", "*://*.ebay.co.uk/sch/*", "*://*.ebay.ca/sch/*", "*://*.ebay.com.mx/sch/*", "*://*.ebay.com.au/sch/*", "*://*.ebay.com.br/sch/*"],
        "js": ["content.js"]
    }]
}